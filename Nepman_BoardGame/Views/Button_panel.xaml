<UserControl x:Class="Nepman_BoardGame.Views.Button_panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nepman_BoardGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="250"
             >
    
    <Grid TextElement.FontSize="17">
            
        <Button Margin="25,110,25,0" Height="50" VerticalAlignment="Top" Content="Кинь кубик"/>
        <Button Margin="25,190,25,0" Height="50" VerticalAlignment="Top" Content="Смени вид"/>
        <Button Margin="25,270,25,0" Height="50" VerticalAlignment="Top" Content="Сделай ход"/>
        <Button Margin="25,350,25,0" Height="50" VerticalAlignment="Top" Content="Купи"/>
        <Button Margin="25,430,25,0" Height="50" VerticalAlignment="Top" Content="Продай"/>
        
        <TextBox x:Name="Display"
                 Text="4"
                 Background="Black"
                 Foreground="#01a434"
                 BorderBrush="Gray" BorderThickness="3"
                 Margin="50,460,90,0"
                 Height="50"
                 VerticalContentAlignment="Top"
                 TextAlignment="Center"
                 FontSize="32"/>

    </Grid>
</UserControl>
